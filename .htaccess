<IfModule mod_rewrite.c>
    RewriteEngine On

    # Expose PWA root-scoped files from /public at the app base path
    RewriteRule ^sw\.js$ public/sw.js [L,NC]
    RewriteRule ^manifest\.json$ public/manifest.json [L,NC]
    RewriteRule ^offline\.html$ public/offline.html [L,NC]

    # Serve assets from /public when project root is the docroot (works in subfolders)
    RewriteRule ^assets/(.*)$ public/assets/$1 [L,NC]

    # If the request is for an existing file/dir, let it pass
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Otherwise, route everything to the public front controller
    RewriteRule ^ public/index.php [L]
</IfModule>


